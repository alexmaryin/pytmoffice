<ClassListItem>:
    on_release: root.select_class(self.text)

<NiceClassViewer>:
    orientation: "vertical"
    height: 400
    class_property: class_property
    description_property: description_property

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: .1
        id: class_layout

        MDLabel:
            text: "Изменить номер класса:"
            size_hint_x: .4

        MDDropDownItem:
            id: class_property
            size_hint_x: .6
            on_release: root.dropdown.open()

    BoxLayout:
        orientation: "horizontal"
        size_hint_y: .9

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            height: 400
            size_hint_x: .9

            MDTextField:
                multiline: True
                id: description_property
                text_color: (0, 0, 0, 1)
                size_hint_y: None
                text_size: self.width, None
                line_anim: False
                readonly: not root.edit_mode
                on_touch_up: root.selected_text = self.selection_text

        BoxLayout:
            orientation: "vertical"
            size_hint_x: .1

            MDIconButton:
                icon: "content-copy"
                on_release: root.copy_text()

            MDIconButton:
                icon: "select-all"
                on_release: root.copy_text(True)