#:include view/kivy/nav_drawer/menu_item_drawer.kv
#:include view/kivy/nav_drawer/navdrawer.kv
#:include view/kivy/rv_list.kv
#:include view/kivy/dialogs/edit_group.kv
#:include view/kivy/dialogs/edit_category.kv

<Spinner>
    size_hint: None, None
    pos_hint: {'center_x': .5, 'center_y': .5}
    active: True

Screen:
    NavigationLayout:
        ScreenManager:
            id: screen_manager
            Screen:
                name: 'list_screen'
                BoxLayout:
                    orientation: 'vertical'

                    MDToolbar:
                        id: toolbar
                        title: "пусто"
                        elevation: 10
                        left_action_items: [['menu', lambda x: nav_drawer.set_state("open")]]
                        right_action_items: [['dots-vertical', lambda x: x], ['plus-circle-outline', lambda x: app.add_item()]]

                    ScrollView:
                        RVList:
                            id: container
            Screen:
                name: 'loading_screen'
                BoxLayout:
                    orientation: 'vertical'

        MDNavigationDrawer:
            id: nav_drawer

            ContentNavigationDrawer:
                id: content_drawer
                padding: 0