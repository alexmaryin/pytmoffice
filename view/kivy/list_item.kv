<GenericListItem>:
    adaptive_height: True
    orientation: 'horizontal'

    TwoLineListItem:
        size_hint_x: .8
        id: content
        text: root.main_text
        secondary_text: root.second_text

    MDBoxLayout:
        size_hint_x: .2
        orientation: 'horizontal'
        pos_hint: {'right': 1}

        MDIconButton:
            icon: "file-edit-outline"
            pos_hint: {"center_y": .5}
            on_release: root.edit_item()

        MDIconButton:
            icon: "delete-outline"
            pos_hint: {"center_y": .5}
            on_release: root.delete_item()

        MDCheckbox:
            pos_hint: {"center_y": .5}
            on_active: root.checked = self.active
