#:include view/kivy/dialogs/nice_class_viewer.kv

<NiceDataListItem>:
    orientation: 'horizontal'
    padding: 15
    ripple_scale: 1
    rv_key: -1

    MDLabel:
        text: root.class_number_text
        halign: "left"
        font_style: "H2"
        size_hint_x: .12

    MDLabel:
        text: root.description_text
        halign: "left"
        valign: "top"
        font_style: "Body1"
        text_size: root.width, root.height
        max_lines: 5

    MDBoxLayout:
        size_hint_x: .2
        orientation: 'horizontal'
        pos_hint: {'right': 1}

        MDIconButton:
            icon: "file-edit-outline"
            pos_hint: {"center_y": .5}
            on_release: root.edit_item()

        MDIconButton:
            icon: "delete-outline"
            pos_hint: {"center_y": .5}
            on_release: root.delete_item()

        MDCheckbox:
            pos_hint: {"center_y": .5}
            active: root.rv_key in app.current_selection
            on_active: app.select_row(root.rv_key, self.active)
